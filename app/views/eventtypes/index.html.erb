<div class="page-header">
<h1>Event Types</h1>
</div>

<table class="table table-striped table-bordered">
  <tr>
    <th>Event Type</th>
    <th>Event Type Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @eventtypes.each do |eventtype| %>
<div class="eventtypes">
  <tr>
    <td><%= eventtype.eventtypename %></td>
    <td><%= eventtype.eventtypedescription %></td>
    <div class="meta">
      <td><%= link_to 'Details', eventtype %></td>
    </div>
    <% if current_user.try(:admin?) %>
    <td><%= link_to 'Edit', edit_eventtype_path(eventtype) %></td>
    <td><%= link_to 'Delete', eventtype, method: :delete, data: { confirm: 'Are you sure you want to delete this event type?' } %></td>
    <% else %>
    <td>    </td>
    <td>        </td>
    <% end %>
  </tr>
</div>
<% end %>
</table>

<br />

<%= link_to 'New Event Type', new_eventtype_path , class: "btn btn-success" %>
